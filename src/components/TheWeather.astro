<!-- Weather -->
<section class="weather">
        
      <h1>Weather</h1>
      <data value="" class="city">City</data>
      <data value="" class="temp">Temp</data>
      <img src="https://via.placeholder.com/150" class="icon">
    
</section>

<script lang="js">

// API key. Replace with your API key
const APIKEY = 'de4e58686a4e1a8bbc47a32b076b0c58';
// City
const city = 'Spokane';
// Units for Farenheit
const units = 'imperial';

// URL query string
const url = `https://api.openweathermap.org/data/2.5/weather?q=${city}&appid=${APIKEY}&units=${units}`;

// Get Elements
const weatherContainer = document.querySelector('.weather');
const theCity = document.querySelector('.city');
const theTemp = document.querySelector('.temp');
const theIcon = document.querySelector('.icon');

// Using fetch to get data
fetch(url)
.then( response => response.json() )
.then( data => {

  // Check-check: Is data good? 
  console.log( data );
  
  // Set Elements
  theCity.innerText = data.name;
  theTemp.innerText = data.main.temp;
  theIcon.src = `http://openweathermap.org/img/wn/${data.weather[0].icon}@2x.png`;
  
});

</script>